<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oervald.kommunikationsapp" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sosu_label"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.AppCompat.Light"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubMenuActivity"
            android:label="@string/title_activity_sub_menu"
            android:icon="@drawable/sosu_label">
        </activity>
        <activity
            android:name=".CreateNewObject"
            android:label="@string/title_activity_create_new_object"
            android:icon="@drawable/sosu_label">
        </activity>
        <activity
            android:name=".ConversationTodayActivity"
            android:label="@string/title_activity_conversation"
            android:windowSoftInputMode="adjustResize"
            android:icon="@drawable/sosu_label">
        </activity>
        <activity
            android:name=".ConversationHistory"
            android:label="@string/title_activity_conversation_history"
            android:icon="@drawable/sosu_label">
        </activity>
        <activity
            android:name=".ConversationHistoryDateScreen"
            android:label="@string/title_activity_conversation_history_date_screen"
            android:icon="@drawable/sosu_label">
        </activity>
    </application>

</manifest>
